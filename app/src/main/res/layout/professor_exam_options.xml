<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/role_background"
tools:context=".professor.ExamOptions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/professorExamNameTxt"
                android:layout_width  ="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Exam name "
                android:textColor="@color/light_button_background"
                android:gravity="center"
                android:textSize="48sp"/>

            <TextView
                android:id="@+id/professorExamInfoTxt"
                android:layout_width  ="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="exam info "
                android:textColor="@color/light_button_background"
                android:gravity="center"
                android:textSize="32sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="8dp"
                android:background="@drawable/button_filled_with_color_bg"
                android:text="See and edit exam details"
                android:onClick="singleExamView"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="8dp"
                android:background="@drawable/button_filled_with_color_bg"
                android:text="see question list"
                android:onClick="questionsList"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="8dp"
                android:background="@drawable/button_filled_with_color_bg"
                android:text="add question"
                android:onClick="addQuestion"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="8dp"
                android:background="@drawable/button_filled_with_color_bg"
                android:text="delete exam"
                android:onClick="deleteExam"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="8dp"
                android:background="@drawable/button_filled_with_color_bg"
                android:text="add student to exam"
                android:onClick="addStudentToExam"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="8dp"
                android:background="@drawable/button_filled_with_color_bg"
                android:text="see student added to this exam"
                android:onClick="seeStudentToExamList"/>


            </LinearLayout>
        </ScrollView>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>